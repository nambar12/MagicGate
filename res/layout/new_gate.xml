<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <ScrollView android:layout_width="fill_parent" android:layout_height="fill_parent">
		<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent">
			<TextView android:text="Gate name: " android:id="@+id/TextView01" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
			<EditText android:text="" android:id="@+id/GateNameText" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true"></EditText>
			<View android:id="@+id/divider1" android:layout_width="fill_parent" android:layout_height="2dip" android:background="@drawable/line_gradient"/>
			<TextView android:text="Phone number: " android:id="@+id/TextView02" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
			<LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
				<EditText android:text="" android:id="@+id/PhoneText" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true" android:layout_weight="1"></EditText>
				<Button android:text="Select" android:id="@+id/ButtonPhone" android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="2dip" android:layout_weight="3"></Button>
			</LinearLayout>
			<View android:id="@+id/divider2" android:layout_width="fill_parent" android:layout_height="2dip" android:background="@drawable/line_gradient"/>
			<TextView android:text="Open distance (meters): " android:id="@+id/TextView01" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
			<EditText android:text="" android:id="@+id/OpenDistanceText" android:layout_width="match_parent" android:layout_height="wrap_content" android:numeric="integer"></EditText>
			<View android:id="@+id/divider3" android:layout_width="fill_parent" android:layout_height="2dip" android:background="@drawable/line_gradient"/>
			<TextView android:text="Location" android:id="@+id/TextView05" android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center_horizontal"></TextView>
			<TableLayout android:id="@+id/TableLayout02" android:layout_width="match_parent" android:layout_height="wrap_content">
				<TableRow>
					<TextView android:text="Langtitude: " android:id="@+id/TextView03" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
					<TextView android:text="" android:id="@+id/LangText" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
				</TableRow>
				<TableRow>
					<TextView android:text="Longtitude: " android:id="@+id/TextView04" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
					<TextView android:text="" android:id="@+id/LongText" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
				</TableRow>
			</TableLayout>
			<TableLayout android:id="@+id/TableLayout01" android:layout_width="match_parent" android:layout_height="wrap_content">
				<TableRow>
					<Button android:text="Get current" android:id="@+id/ButtonGetFix" android:layout_width="match_parent" android:layout_weight="1" android:padding="2dip"></Button>
					<Button android:text="Show map" android:id="@+id/ButtonMap" android:layout_width="match_parent" android:layout_weight="1" android:padding="2dip"></Button>
				</TableRow>
			</TableLayout>
			<View android:id="@+id/divider4" android:layout_width="fill_parent" android:layout_height="2dip" android:background="@drawable/line_gradient"/>
			<TextView android:text="" android:id="@+id/TextView06" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
			<Button android:text="Add" android:id="@+id/ButtonAdd" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1" android:padding="2dip"></Button>
		</LinearLayout>
	</ScrollView>
</LinearLayout>
